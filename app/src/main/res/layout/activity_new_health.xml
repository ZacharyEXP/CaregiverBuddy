<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/medecine_cover_photo"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/health_cover"
            android:contentDescription="TODO" />
        <!--This last methods disable the blanks of the margins  -->

        <!--<EditText
            android:id="@+id/edit_name_health"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medecine_cover_photo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:hint="@string/hint_health_name"
            android:inputType="textCapSentences" />-->

        <TextView
            android:id="@+id/edit_name_health"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medecine_cover_photo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:prompt="@string/spinner_prompt_health"
            />


        <LinearLayout
            android:id="@+id/health_var"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_toRightOf="@id/edit_name_health"
            android:layout_below="@+id/medecine_cover_photo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <!-- android:id="@+id/edit_type_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_typeH_name"
            android:inputType="date" />-->
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_done"
            app:backgroundTint="#ffffff"
            android:clickable="true"
            app:fabSize="normal"
            />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>