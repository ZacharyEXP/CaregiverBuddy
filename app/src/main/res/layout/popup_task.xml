<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#62def8">

    <TextView
        android:id="@+id/task_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="22sp"
        android:text="Enter Task Info"/>

    <EditText
        android:id="@+id/task_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/task_text"
        android:ems="10"
        android:hint="Enter Task Description"
        android:inputType="text" />

    <EditText
        android:id="@+id/task_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/task_desc"
        android:ems="10"
        android:hint="Enter Task Start"
        android:inputType="time" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recur"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"
        android:checkedButton="@+id/freq_once"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/freq_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once" />

        <RadioButton
            android:id="@+id/freq_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily" />

        <RadioButton
            android:id="@+id/freq_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly" />
    </RadioGroup>

</RelativeLayout>