<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/patLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:maxHeight="30dp"
            android:maxWidth="30dp" />

        <Button
            android:id="@+id/edit_photo"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_below="@+id/person_photo"
            android:background="#10000000"
            android:onClick="onClick"
            android:text="Change Photo"
            android:textAllCaps="false"
            android:textColor="#048dc9"
            android:textStyle="italic"
            android:textAlignment="gravity"
            android:gravity="start" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_photo"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/person_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_photo"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/person_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_name"
            android:layout_toRightOf="@+id/person_photo" />

        <EditText
            android:id="@+id/person_age_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/person_name_edit"
            android:layout_toRightOf="@+id/person_photo" />

        <TextView
            android:id="@+id/person_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_photo"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/person_desc_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_photo"
            android:textSize="30sp" />


    </RelativeLayout>

    <com.dpro.widgets.WeekdaysPicker
        android:id="@+id/pat_weekdays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patLayout"
        app:sunday_first_day="true" />

    <Button
        android:id="@+id/edit_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Patient Bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pat_weekdays" />

    <Button
        android:id="@+id/edit_bio_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pat_weekdays" />


</android.support.constraint.ConstraintLayout>